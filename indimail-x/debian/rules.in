#!/usr/bin/make -f

# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
# export DH_COMPAT=4
CFLAGS=-g -DOBS_BUILD
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0 -fno-strict-aliasing -Wno-unused-result -Wno-unused-result
else
	CFLAGS += -O2 -fno-strict-aliasing -Wno-unused-result -Wno-unused-result
endif

prefix=@prefix@
indimaildir=@indimaildir@
domaindir=@domaindir@
version=@version@
sysconfdir=@sysconfdir@
libexecdir=@libexecdir@
mandir=@mandir@
courier_version=@courier_version@
bogofilter_version=@bogofilter_version@
fetchmail_version=@fetchmail_version@
nssd_version=@nssd_version@
pam_multi_version=@pam_multi_version@
tcpserver_plugin=1
default_domain=indimail.org
rm=/bin/rm
cp=/bin/cp

DESTDIR=$(CURDIR)/debian/tmp

define genControl
$(shell if [ -d ../BUILD ] ; then ../BUILD/debian/gen_control; else debian/gen_control;fi)
endef
libdir=@prefix@/lib
pkgconfigdir=@prefix@/lib/pkgconfig

build: build-stamp
build-stamp:
	dh_testdir
	#
	# Extract source archives
	#
	if [ -f ../BUILD/debian/obs_deb_prep ] ; then sh ../BUILD/debian/obs_deb_prep; fi
	if [ -f ../BUILD/debian/gen_control ] ; then chmod +x ../BUILD/debian/gen_control; fi
	#
	# run configure script
	#
	if [ -d indimail-$(version) ] ; then \
		cd indimail-$(version); \
		./configure --prefix=$(prefix) --libdir=$(libdir) \
		--with-pkgconfigdir=$(pkgconfigdir) --libexecdir=$(libexecdir) \
		--mandir=$(prefix)/share/man --datarootdir=$(prefix)/share/indimail \
		--mandir=$(mandir) --sysconfdir=$(sysconfdir) \
		--enable-qmaildir=$(indimaildir) --enable-domaindir=$(domaindir) \
		--enable-tcprules-prog=$(prefix)/bin/tcprules \
		--enable-tcpserver-file=$(sysconfdir)/tcp/tcp.smtp \
		--enable-default-domain=$(default_domain) \
		--enable-mysqlprefix=/usr `cat config/indimail.opts`; \
		cd ..; \
	fi
	if [ -d nssd-$(nssd_version) ] ; then \
		if [ -d /run ] ; then \
			nssd_sock=/run/indimail/nssd.sock; \
		elif [ -d /var/run ] ; then \
			nssd_sock=/var/run/indimail/nssd.sock; \
		else \
			nssd_sock=/tmp/nssd.sock; \
		fi; \
		cd nssd-$(nssd_version) ; \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --libdir=$(libdir) \
		--datarootdir=$(prefix)/share/indimail \
		--libexecdir=$(libexecdir) --enable-nssd-socket=$(nssd_sock) \
		--enable-nssd-config-path=$(sysconfdir)/nssd.conf \
		--enable-default-domain=$(default_domain) \
		--mandir=$(mandir) --enable-mysqlprefix=/usr `cat ../indimail-$(version)/config/nssd.opts`; \
		cd ..; \
	fi
	if [ -d pam-multi-$(pam_multi_version) ] ; then \
		cd pam-multi-$(pam_multi_version); \
		./configure --prefix=$(prefix) --enable-mysqlprefix=/usr \
		--datarootdir=$(prefix)/share/indimail \
		--enable-moduledir=/lib/security --enable-controldir=$(sysconfdir)/control \
		--enable-dlload-mysql=yes --enable-default-domain=$(default_domain); \
		cd ..; \
	fi
	if [ -d courier-imap-$(courier_version) ] ; then \
		cd courier-imap-$(courier_version) ; \
		./configure --prefix=$(prefix) --libexecdir=$(libexecdir) --bindir=$(prefix)/bin \
		--mandir=$(mandir) --sysconfdir=$(sysconfdir) --libdir=$(libdir) \
		--datarootdir=$(prefix)/share/indimail --with-certsdir=$(sysconfdir)/certs \
		--with-mailer=$(prefix)/bin/sendmail \
		`cat ../indimail-$(version)/config/courier-imap.opts`; \
		cd ..; \
	fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then \
		cd bogofilter-$(bogofilter_version) ; \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --libexecdir=$(libexecdir) \
		--datarootdir=$(prefix)/share/indimail --mandir=$(mandir) \
		`cat ../indimail-$(version)/config/bogofilter.opts`; \
		cd ..; \
	fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then \
		cd fetchmail-$(fetchmail_version); \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) \
		--datarootdir=$(prefix)/share/indimail --libexecdir=$(libexecdir) \
		--mandir=$(mandir) `cat ../indimail-$(version)/config/fetchmail.opts`; \
		cd ..; \
	fi
	#
	# run make
	#
	if [ -d indimail-$(version) ]              ; then $(MAKE) -s -C indimail-$(version) DESTDIR=$(DESTDIR); fi
	if [ -d nssd-$(nssd_version) ]             ; then $(MAKE) -s -C nssd-$(nssd_version) DESTDIR=$(DESTDIR); fi
	if [ -d pam-multi-$(pam_multi_version) ]   ; then $(MAKE) -s -C pam-multi-$(pam_multi_version) DESTDIR=$(DESTDIR); fi
	if [ -d courier-imap-$(courier_version) ]  ; then $(MAKE) -s -C courier-imap-$(courier_version) DESTDIR=$(DESTDIR); fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s -C bogofilter-$(bogofilter_version) DESTDIR=$(DESTDIR); fi
	if [ -d fetchmail-$(fetchmail_version) ]   ; then $(MAKE) -s -C fetchmail-$(fetchmail_version) DESTDIR=$(DESTDIR); fi
	${rm} -rf $(DESTDIR)$(libdir)/*.la
	touch build-stamp

clean:
	${rm} -f build-stamp configure-stamp
	${rm} -rf $(DESTDIR)
	if [ -d indimail-$(version) ]              ; then $(MAKE) -s clean -C indimail-$(version) || true; fi
	if [ -d nssd-$(nssd_version) ]             ; then $(MAKE) -s clean -C nssd-$(nssd_version) || true; fi
	if [ -d pam-multi-$(pam_multi_version) ]   ; then $(MAKE) -s clean -C pam-multi-$(pam_multi_version) || true; fi
	if [ -d courier-imap-$(courier_version) ]  ; then $(MAKE) -s clean -C courier-imap-$(courier_version) || true; fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s clean -C bogofilter-$(bogofilter_version) || true; fi
	if [ -d fetchmail-$(fetchmail_version) ]   ; then $(MAKE) -s clean -C fetchmail-$(fetchmail_version) || true; fi
	if [ -d indimail-$(version) ]              ; then $(MAKE) -s distclean -C indimail-$(version) || true; fi
	if [ -d nssd-$(nssd_version) ]             ; then $(MAKE) -s distclean -C nssd-$(nssd_version) || true; fi
	if [ -d pam-multi-$(pam_multi_version) ]   ; then $(MAKE) -s distclean -C pam-multi-$(pam_multi_version) || true; fi
	if [ -d courier-imap-$(courier_version) ]  ; then $(MAKE) -s distclean -C courier-imap-$(courier_version) || true; fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s distclean -C bogofilter-$(bogofilter_version) || true; fi
	if [ -d fetchmail-$(fetchmail_version) ]   ; then $(MAKE) -s distclean -C fetchmail-$(fetchmail_version) || true; fi
	dh_testdir
	dh_testroot
	dh_clean
	dh_auto_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep || dh_clean -k
	dh_installdirs
	if [ -d indimail-$(version) ]              ; then $(MAKE) -s install -C indimail-$(version) DESTDIR=$(DESTDIR); fi
	if [ -d nssd-$(nssd_version) ]             ; then $(MAKE) -s install -C nssd-$(nssd_version) DESTDIR=$(DESTDIR); fi
	if [ -d pam-multi-$(pam_multi_version) ]   ; then $(MAKE) -s install -C pam-multi-$(pam_multi_version) DESTDIR=$(DESTDIR); fi
	if [ -d courier-imap-$(courier_version) ]  ; then $(MAKE) -s install -C courier-imap-$(courier_version) DESTDIR=$(DESTDIR); fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s install -C bogofilter-$(bogofilter_version) DESTDIR=$(DESTDIR); fi
	if [ -d fetchmail-$(fetchmail_version) ]   ; then $(MAKE) -s install -C fetchmail-$(fetchmail_version) DESTDIR=$(DESTDIR); fi
	mkdir -p $(DESTDIR)$(domaindir)/domains
	mkdir -p $(DESTDIR)$(indimaildir)/inquery

binary-indep: build install
	dh_testdir
	dh_testroot
	find $(DESTDIR)$(mandir) -name '*'.? -type f -exec gzip -q {} \;
	dh_install --sourcedir=$(DESTDIR) -pindimail
	dh_install --sourcedir=$(DESTDIR) -pindimail-devel
	dh_install --sourcedir=$(DESTDIR) -plibindimail
	dh_installchangelogs
	dh_installcron
	dh_installdocs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_makeshlibs -V
	dh_shlibdeps
	#$(genControl)
	dh_gencontrol
	dh_installcron
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here. 
binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
