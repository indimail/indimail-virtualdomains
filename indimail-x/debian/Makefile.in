indimaildir=@indimaildir@
mandir=@mandir@
libexecdir=@libexecdir@
qmaildir=@qmaildir@
domaindir=@domaindir@
sysconfdir=@sysconfdir@
logdir=@logdir@
basepath=@basepath@
mysql_prefix=@mysql_prefix@
defaultdomain=@defaultdomain@
version=@version@
release=@release@
prefix=@prefix@
arch=$(shell uname -m)
#

libdir=@prefix@/lib
pkgconfigdir=@prefix@/lib/pkgconfig

all: rules indimail.prerm indimail.preinst indimail.postrm indimail.postinst \
indimail.dsc indimail-Debian_10.dsc indimail-Debian_9.0.dsc \
indimail-devel.postinst indimail-devel.postrm indimail-xUbuntu_18.04.dsc \
debian.tar.gz dummy.tar.gz

install: all
install-strip: install
distclean: clean

clean:
	/bin/rm -f rules indimail.prerm indimail.preinst indimail.postrm \
	indimail.postinst indimail-devel.postinst indimail-devel.postrm \
	debian.tar.gz dummy.tar.gz *.dsc *.install

noinst_SCRIPTS = indimail.prerm indimail.preinst indimail.postrm \
				 indimail.postinst rules \
				 indimail-devel.postinst indimail-devel.postrm
MOSTLYCLEANFILES= indimail.prerm indimail.preinst indimail.postrm \
				  indimail.postinst rules \
				  indimail-devel.postinst indimail-devel.postrm \
				  changelog debian.tar.gz dummy.tar.gz

edit = sed \
	-e 's,@indimaildir\@,$(indimaildir),g' \
	-e 's,@domaindir\@,$(domaindir),g' \
	-e 's,@mandir\@,$(mandir),g' \
	-e 's,@libexecdir\@,$(libexecdir),g' \
	-e 's,@sysconfdir\@,$(sysconfdir),g' \
	-e 's,@qmaildir\@,$(qmaildir),g' \
	-e 's,@pkgconfigdir\@,$(pkgconfigdir),g' \
	-e 's,@libdir\@,$(libdir),g' \
	-e 's,@logdir\@,$(logdir),g' \
	-e 's,@basepath\@,$(basepath),g' \
	-e 's,@mysql_prefix\@,$(mysql_prefix),g' \
	-e 's,@defaultdomain\@,$(defaultdomain),g' \
	-e 's,@version\@,$(version),g' \
	-e 's,@release\@,$(release),g' \
	-e 's,@DESTDIR\@,$(DESTDIR),g' \
	-e 's,@HOST\@,$(host),g' \
	-e 's,@DATE\@,$(DATE),g' \
	-e 's,@prefix\@,$(prefix),g'

rules: rules.in Makefile
	$(edit) $@.in > $@; chmod +x $@;
indimail.prerm: indimail.prerm.in Makefile
	$(edit) $@.in > $@;
indimail.preinst: indimail.preinst.in Makefile
	$(edit) $@.in > $@;
indimail.postrm: indimail.postrm.in Makefile
	$(edit) $@.in > $@;
indimail.postinst: indimail.postinst.in Makefile
	$(edit) $@.in > $@;
indimail-devel.postinst: indimail-devel.postinst.in ../conf-version ../conf-release
	$(edit) $@.in > $@;
indimail-devel.postrm: indimail-devel.postrm.in ../conf-version ../conf-release
	$(edit) $@.in > $@;

indimail.install: indimail.install.in
	$(edit) $@.in > $@
indimail-devel.install: indimail-devel.install.in ../conf-version ../conf-release
	$(edit) $@.in > $@;
libindimail.install: libindimail.install.in ../conf-version ../conf-release
	$(edit) $@.in > $@;

indimail.cron.d: indimail.cron.d.in
	$(edit) $@.in > $@

changelog: changelog.in Makefile ../conf-version ../conf-release
	(cat $@.in; echo ""; \
	echo " -- Manvendra Bhangui <indimail-virtualdomains@indimail.org>  `date +'%a, %d %b %Y %H:%M:%S %z'`" ) \
	| $(edit) > $@
indimail.dsc: indimail.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@;
indimail-Debian_10.dsc: indimail-Debian_10.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@;
indimail-Debian_9.0.dsc: indimail-Debian_9.0.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@;
indimail-xUbuntu_18.04.dsc: indimail-xUbuntu_18.04.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@;
indimail-xUbuntu_18.10.dsc: indimail-xUbuntu_18.10.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@;

#sed -e 's,@drelease\@,$(release),g' $@.tmp > $@; /bin/rm -f $@.tmp

dummy.tar.gz: README
	tar cf - README |gzip > $@
debian.tar.gz: copyright indimail.preinst indimail.postinst indimail.prerm \
indimail.postrm rules changelog compat indimail-devel.postinst \
indimail-devel.postrm Makefile control indimail.cron.d control \
indimail.install indimail-devel.install libindimail.install docs
	tar cf - copyright indimail.preinst indimail.postinst indimail.prerm \
		indimail.postrm rules changelog compat control \
		indimail-devel.postinst indimail-devel.postrm \
		indimail.cron.d  docs indimail.install \
		indimail-devel.install libindimail.install |gzip > $@
