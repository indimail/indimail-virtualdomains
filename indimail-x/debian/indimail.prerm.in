#!/bin/sh
# prerm script for indimail
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

prefix=@prefix@
indimaildir=@indimaildir@
sysconfdir=@sysconfdir@
libexecdir=@libexecdir@
servicedir=@servicedir@
mandir=@mandir@
rm=/bin/rm
mv=/bin/mv

log_it()
{
  echo "$(echo  ""|tai64n|tai64nlocal)$*"
}

case "$1" in
    remove|upgrade|deconfigure)
	(
	if [ -f ${libexecdir}/iupgrade.sh ] ; then
		log_it "Running Custom Upgrade Script for prerm $1"
		/bin/sh ${libexecdir}/iupgrade.sh prerm $1 @version@ $* | tai64n | tai64nlocal
	fi
	# stop indimail services before upgrade
	if [ -d /run ] ; then
		rundir=/run/svscan
	elif [ -d /var/run ] ; then
		rundir=/var/run/svscan
	else
		rundir=${servicedir}
	fi
	set +e
	for i in mrtg mysql.3306 indisrvr.4000 inlookup.infifo \
		qmail-poppass.106 qmail-logfifo proxy-imapd.4143 \
		proxy-imapd-ssl.9143 \ proxy-pop3d.4110 proxy-pop3d-ssl.9110
	do
		${prefix}/bin/svstat ${servicedir}/$i
		if [ $? -eq 0 ] ; then
			mkdir -p ${rundir}/$i
			touch ${rundir}/$i/.down
			${prefix}/bin/svc -d ${servicedir}/$i >/dev/null 2<&1
		fi
	done
	set -e
	) >> /var/log/indimail-setup.log 2>&1
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# we are doing upgrade
if [ " $1" = " upgrade" -o " $1" = " deconfigure" ] ; then
	exit 0
fi
(
if [ -s ${sysconfdir}/indimail-stat.override -a -f /usr/sbin/dpkg-statoverride ] ; then
	log_it "reverting permissions"
	/bin/cat ${sysconfdir}/indimail-stat.override | while read line
	do
		if [ -f $line ] ; then
			log_it "reverting permission for $line"
			/usr/sbin/dpkg-statoverride --remove $line || true
		fi
	done
	${rm} -f ${sysconfdir}/indimail-stat.override
fi
if [ -f ${mandir}/man8/rmail_i.8.gz ] ; then
${mv} ${mandir}/man8/rmail_i.8.gz ${mandir}/man8/rmail.8.gz || true
fi
if [ -f ${mandir}/man8/rmail_i.8 ] ; then
${mv} ${mandir}/man8/rmail_i.8 ${mandir}/man8/rmail.8 || true
fi
if [ -f ${mandir}/man1/newaliases_i.1.gz ] ; then
${mv} ${mandir}/man1/newaliases_i.1.gz ${mandir}/man1/newaliases.1.gz || true
fi
if [ -f ${mandir}/man1/newaliases_i.1 ] ; then
${mv} ${mandir}/man1/newaliases_i.1 ${mandir}/man1/newaliases.1 || true
fi
if [ -f ${prefix}/bin/newaliases_i ] ; then
${mv} ${prefix}/bin/newaliases_i ${prefix}/bin/newaliases || true
fi
if [ -f ${prefix}/bin/rmail_i ] ; then
${mv} ${prefix}/bin/rmail_i ${prefix}/bin/rmail || true
fi

for i in lib sbin
do
	if [ -f /usr/$i/sendmail.old ] ; then
		${mv} /usr/$i/sendmail.old /usr/$i/sendmail || true
	fi
done

if [ -f ${libexecdir}/iupgrade.sh ] ; then
log_it "Running Custom Upgrade Script for prerm $1"
/bin/sh ${libexecdir}/iupgrade.sh prerm uninstall @version@ $* | tai64n | tai64nlocal
fi
) >> /var/log/indimail-setup.log 2>&1
exit 0
