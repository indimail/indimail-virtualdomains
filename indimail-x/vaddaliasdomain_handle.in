# send sighup to qmail-send
# arguments new_domain old_domain
if [ -n $SERVICEDIR ] ; then
	servicedir=$SERVICEDIR
else
	servicedir=@servicedir@*
fi
@prefix@/bin/svc -h $servicedir/*-send.* 2>/dev/null
exit 0
