#!/bin/sh
if [ ! -f ./configure -o ! -f Makefile -o ! -f Makefile.in ] ; then
  autoreconf -fiv
fi
if [ ! -f conf-release ] ; then
  echo 1.1 > conf-release
fi
SYSTEM=$(uname -s)
case "$SYSTEM" in
  FreeBSD)
  prefix=/usr/local
  sbindir=/usr/local/sbin
  sysconfdir=/usr/local/etc/indimail
  mandir=/usr/local/man
  ;;
  Darwin)
  prefix=/usr/local
  sbindir=/usr/local/sbin
  sysconfdir=/usr/local/etc/indimail
  mandir=/usr/local/share/man
  ;;
  Linux)
  prefix=/usr
  if [ -f /etc/arch-release ] ; then
    sbindir=/usr/bin
  else
    sbindir=/usr/sbin
  fi
  sysconfdir=/etc/indimail
  mandir=/usr/share/man
  ;;
  *)
  prefix=/usr
  sbindir=/usr/sbin
  sysconfdir=/usr/etc/indimail
  mandir=/usr/man
  ;;
esac

if [ $(stat --format %Y configure.ac) -le $(stat --format %Y configure) ] ; then
	echo "Already configured"
	exit 0
fi
./configure --prefix=$prefix --sbindir=$sbindir \
  --mandir=$mandir \
  --enable-sendmail-prog=$prefix/bin/sendmail \
  --sysconfdir=$sysconfdir

