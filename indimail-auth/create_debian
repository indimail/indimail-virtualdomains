#!/bin/sh
pam_multi_version=$(cat ../pam-multi-x/conf-version)
nssd_version=$(cat ../nssd-x/conf-version)

if [ -d ../stage ] ; then
	/bin/rm -rf ../stage
fi
mkdir -p ../stage
cp -rp ../nssd-x ../stage/nssd-$nssd_version
cp -rp ../pam-multi-x ../stage/pam-multi-$pam_multi_version
make -s
make -s -C debian
cp -rp debian ../stage
cd ../stage
for i in nssd-$nssd_version pam-multi-$pam_multi_version
do
	make -s -C $i clean
	make -s -C $i distclean
done
dpkg-buildpackage -tc -b
cd ..
/bin/rm -r stage
